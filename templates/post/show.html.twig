{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block contents %}

<div class="example-wrapper">
    <h1>{{ post.title }}</h1>

    <p>{{ post.text }}, Categoria: {{ post.category }}</p>

    <hr/>
    <p><a href="{{ url('delete_post', { postId: post.id } ) }}">Eliminar</a></p>
    <p><a href="{{ url('update_post', { postId: post.id } ) }}">Editar</a></p>
    <p><a href="{{ url('post') }}">Volver al listado</a></p>
</div>
{% endblock %}
